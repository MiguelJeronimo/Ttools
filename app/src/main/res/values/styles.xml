<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="SwitchCompatTheme"><!--Creando tema para los swtches-->
        <item name="colorControlActivated">@color/fondo_switch</item>
    </style>

    <style name="colores_menus">
        <item name="colorControlNormal">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="tema_autocomplete" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <!-- Color del contorno cuando está inactivo -->
        <item name="boxStrokeColor">@color/fondo_switch</item>
        <!-- Color del texto de la pista (hint) -->
        <item name="hintTextColor">@color/fondo_switch</item>
        <!-- Color del icono de inicio -->
        <item name="startIconTint">@color/fondo_switch</item>
    </style>

    <style name="tema_spinner_autocomplete" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.Dense.ExposedDropdownMenu">
        <!-- Color del contorno cuando está inactivo -->
        <item name="boxStrokeColor">@color/fondo_switch</item>
        <!-- Color del texto de la pista (hint) -->
        <item name="hintTextColor">@color/fondo_switch</item>
        <!-- Color del icono de inicio -->
        <item name="startIconTint">@color/fondo_switch</item>

        <item name="android:dropDownHintAppearance">@color/colorPrimaryDark</item>
        <item name="android:popupBackground">@color/colorPrimaryDark</item>

        <item name="android:dropDownItemStyle">@color/fondo_switch</item>

        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

</resources>
