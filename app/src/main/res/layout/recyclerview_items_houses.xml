<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:background="@color/colorPrimary"
    android:orientation="vertical">
    <TextView
        android:id="@+id/house_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="10dp"
        android:paddingTop="5dp"
        android:text="Dagger Alley 1"
        android:textColor="@color/letras"
        android:textSize="25dp"
        />
    <TextView
        android:id="@+id/house_size"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="20dp"
        android:textStyle="italic"
        android:text="Size: 57"
        android:textColor="@color/color_degradado"
        />
    <TextView
        android:id="@+id/house_rent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="20dp"
        android:textStyle="italic"
        android:text="200,000 golds de renta"
        android:textColor="@color/color_degradado"
        />
    <TextView
        android:id="@+id/house_rented"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textStyle="bold"
        android:text="Ocupada"
        android:textColor="@color/letras"
        />
    <TextView
        android:id="@+id/house_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textStyle="bold"
        android:text="Ocupada"
        android:visibility="invisible"
        android:textColor="@color/letras"
        />

</LinearLayout>