    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/spinner_worldss_container"
        style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense.ExposedDropdownMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:boxBackgroundColor="@color/recyclerview_items_color"
        app:boxCornerRadiusTopEnd="10dp"
        app:boxCornerRadiusTopStart="10dp"
        app:hintTextColor="@color/letras"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <AutoCompleteTextView
            android:id="@+id/spinner_worldss"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="none"
            android:popupBackground="@color/recyclerview_items_color"
            android:textColor="@color/letras"
            android:textStyle="bold" />
    </com.google.android.material.textfield.TextInputLayout>

    <!--<Spinner
        android:id="@+id/spinner_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/leyenda"
        android:popupBackground="@color/colorPrimary"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toTopOf="@+id/spinner_worldss_container" />-->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/spinner_category_container"
        style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense.ExposedDropdownMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:boxBackgroundColor="@color/recyclerview_items_color"
        app:boxCornerRadiusTopEnd="10dp"
        app:boxCornerRadiusTopStart="10dp"
        app:hintTextColor="@color/letras"
        app:layout_constraintTop_toBottomOf="@+id/spinner_worldss_container"
        tools:layout_editor_absoluteX="10dp">

        <AutoCompleteTextView
            android:id="@+id/spinner_category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="none"
            android:popupBackground="@color/recyclerview_items_color"
            android:textColor="@color/letras"
            android:textStyle="bold" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/spinner_vocationss_container"
        style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense.ExposedDropdownMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:boxBackgroundColor="@color/recyclerview_items_color"
        app:boxCornerRadiusTopEnd="10dp"
        app:boxCornerRadiusTopStart="10dp"
        app:hintTextColor="@color/letras"
        app:layout_constraintTop_toBottomOf="@+id/spinner_category_container"
        tools:layout_editor_absoluteX="10dp">

        <AutoCompleteTextView
            android:id="@+id/spinner_vocationss"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="none"
            android:popupBackground="@color/recyclerview_items_color"
            android:textColor="@color/letras"
            android:textStyle="bold" />
    </com.google.android.material.textfield.TextInputLayout>
    <!--<Spinner
        android:id="@+id/spinner_vocationss"
        android:layout_width="match_parent"
