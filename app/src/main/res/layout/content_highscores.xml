<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <Spinner
        android:id="@+id/spinner_worlds"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:backgroundTint="@color/leyenda"
        android:popupBackground="@color/colorPrimary"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="33dp" />

    <Spinner
        android:id="@+id/spinner_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/leyenda"
        android:popupBackground="@color/colorPrimary"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toTopOf="@+id/spinner_worlds" />
    <Spinner
        android:id="@+id/spinner_vocations"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/leyenda"
        android:popupBackground="@color/colorPrimary"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toTopOf="@+id/spinner_category" />

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="100dp"
        app:layout_constraintTop_toTopOf="@+id/spinner_vocations"
        tools:listitem="@layout/recyclerview_items_highscores"
        />

</androidx.constraintlayout.widget.ConstraintLayout>