<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#263238"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <EditText
        android:id="@+id/editTextTextPersonName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="40dp"
        android:backgroundTint="@android:color/holo_purple"
        android:ems="10"
        android:focusable="auto"
        android:hint="Character"
        android:inputType="text"
        android:numeric="integer"
        android:textAllCaps="false"
        android:textColor="@color/leyenda"
        android:textColorHighlight="@android:color/holo_purple"
        android:textColorHint="@android:color/darker_gray"
        android:textColorLink="@android:color/holo_purple"
        android:textCursorDrawable="@android:color/holo_orange_light"
        android:textIsSelectable="false"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnenviar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="16dp"
        android:background="#4A148C"
        android:backgroundTint="#6A1B9A"
        android:elevation="@dimen/fab_margin"
        android:foregroundTint="@color/colorAccent"
        android:text="Buscar"
        android:textColor="@color/leyenda"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.615"
        app:layout_constraintStart_toEndOf="@+id/Nivel"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="409dp"
        android:layout_height="599dp"
        android:layout_marginTop="37dp"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextPersonName"
        tools:layout_editor_absoluteX="2dp">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:stretchColumns="1">

                <TableRow>

                    <TextView
                        android:layout_width="133dp"
                        android:layout_marginLeft="5dp"
                        android:padding="3dip"
                        android:text="Name: "
                        android:textColor="#FFF" />

                    <TextView
                        android:id="@+id/nombre"
                        android:layout_marginRight="5dp"
                        android:gravity="left"
                        android:padding="3dip"
                        android:text=""
                        android:textColor="#8d8d8d" />
                </TableRow>

                <TableRow>

                    <TextView
                        android:layout_marginLeft="5dp"
                        android:padding="3dip"
                        android:text="Title: "
                        android:textColor="#FFF" />

                    <TextView
                        android:id="@+id/titulo"
                        android:layout_marginRight="5dp"
                        android:gravity="left"
                        android:padding="3dip"
                        android:textColor="#8d8d8d"
                        android:text="" />
                </TableRow>

                <TableRow>

                    <TextView
                        android:layout_marginLeft="5dp"
                        android:padding="3dip"
                        android:text="Sex: "
                        android:textColor="#FFF" />

                    <TextView
                        android:id="@+id/sexo"
                        android:layout_marginRight="5dp"
                        android:gravity="left"
                        android:padding="3dip"
                        android:textColor="#8d8d8d"
                        android:text="" />
                </TableRow>

                <TableRow>

                    <TextView
                        android:layout_marginLeft="5dp"
                        android:padding="3dip"
                        android:text="Vocation:"
                        android:textColor="#FFF" />

                    <TextView
                        android:id="@+id/vocacion"
                        android:layout_marginRight="5dp"
                        android:gravity="left"
                        android:padding="3dip"
                        android:textColor="#8d8d8d"
                        android:text="" />
                </TableRow>

                <TableRow>

                    <TextView
                        android:layout_marginLeft="5dp"
                        android:padding="3dip"
                        android:text="Level:"
                        android:textColor="#FFF" />

                    <TextView
                        android:id="@+id/nivel"
                        android:layout_marginRight="5dp"
                        android:gravity="left"
                        android:padding="3dip"
                        android:textColor="#8d8d8d"
                        android:text="" />
                </TableRow>

                <TableRow>

                    <TextView
                        android:layout_marginLeft="5dp"
                        android:padding="3dip"
                        android:text="Achievement Points:"
                        android:textColor="#FFF" />

                    <TextView
                        android:id="@+id/achivement"
                        android:layout_marginRight="5dp"
                        android:gravity="left"
                        android:padding="3dip"
                        android:textColor="#8d8d8d"
                        android:text="" />
                </TableRow>

                <TableRow>

                    <TextView
                        android:layout_marginLeft="5dp"
                        android:padding="3dip"
                        android:text="World:"
                        android:textColor="#FFF" />

                    <TextView
                        android:id="@+id/mundo"
                        android:layout_marginRight="5dp"
                        android:gravity="left"
                        android:padding="3dip"
                        android:textColor="#8d8d8d"
                        android:text="" />
                </TableRow>

                <TableRow>

                    <TextView
                        android:layout_marginLeft="5dp"
                        android:padding="3dip"
                        android:text="Residence:"
                        android:textColor="#FFF" />

                    <TextView
                        android:id="@+id/residencia"
                        android:layout_marginRight="5dp"
                        android:gravity="left"
                        android:padding="3dip"
                        android:textColor="#8d8d8d"
                        android:text="" />
                </TableRow>

                <TableRow android:paddingRight="20dp">

                    <TextView
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:height="@android:dimen/thumbnail_height"
                        android:padding="3dip"
                        android:text="Guild Membership:"
                        android:textColor="#FFF" />

                    <TextView
                        android:id="@+id/guild"
                        android:layout_marginRight="5dp"
                        android:width="@android:dimen/thumbnail_width"
                        android:gravity="left"
                        android:padding="3dip"
                        android:textColor="#8d8d8d"
                        android:text="" />
                </TableRow>

                <TableRow>

                    <TextView
                        android:layout_marginLeft="5dp"
                        android:padding="3dip"
                        android:text="Last login:"
                        android:textColor="#FFF" />

                    <TextView
                        android:id="@+id/last_loguin"
                        android:layout_marginRight="5dp"
                        android:gravity="left"
                        android:padding="3dip"
                        android:textColor="#8d8d8d"
                        android:text="" />
                </TableRow>

                <TableRow>

                    <TextView
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:height="@android:dimen/thumbnail_height"
                        android:padding="3dip"
                        android:text="Comment: "
                        android:textColor="#FFF" />

                    <TextView
                        android:id="@+id/comentario"
                        android:layout_marginRight="5dp"
                        android:width="@android:dimen/thumbnail_width"
                        android:gravity="left"
                        android:padding="3dip"
                        android:textColor="#8d8d8d"
                        android:text="" />
                </TableRow>
            </TableLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>